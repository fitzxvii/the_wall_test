<li id="comment_<%= id %>">
    <h3> <%= "#{session[:first_name]} #{session[:last_name]} - #{DateTime.now.strftime("%-m/%-d/%Y %l:%M %p")}" %> </h3>
    <p contenteditable="true" data-comment_id="<%= id %>" ><%= comment %></p>
    <form class="delete_comment_form" action="/delete_comment" method="POST" data-is_processing="0">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="comment_id" value="<%= id %>">
        <button type='submit'>Delete Comment</button>
    </form>
</li>